---
import '../styles/global.css';
import { navigation } from '../data/navigation';

interface Props {
  title: string;
  section?: string;
}

const { title, section } = Astro.props;
const currentPath = Astro.url.pathname;

// Map section titles to icon colors
const sectionColors: Record<string, string> = {
  "Company Setup": "text-blue-600",
  "Work Orders": "text-orange-500",
  "Invoice & Payments": "text-green-600",
  "Mobile App": "text-purple-600",
  "Dispatch": "text-red-500",
  "Estimates": "text-cyan-600",
  "CRM": "text-pink-500",
  "Dashboard & Reports": "text-indigo-600",
  "Timekeeping": "text-teal-600",
  "Notifications": "text-yellow-500",
  "Auxiliary Modules": "text-slate-600",
  "Helpful Resources": "text-emerald-600",
  "Account Information": "text-gray-600",
};
---

<!DOCTYPE html>
<html lang="en" class="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Field Promax Tutorials - Learn how to use Field Promax effectively" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Field Promax Tutorials</title>
    <script is:inline>
      // Check for saved theme preference or system preference
      const theme = localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.classList.toggle('dark', theme === 'dark');
    </script>
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Brand accent line at top -->
    <div class="brand-accent h-1 fixed top-0 left-0 right-0 z-50"></div>

    <!-- Header -->
    <header class="fixed top-1 left-0 right-0 z-40 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 h-16">
      <div class="flex items-center justify-between h-full px-4 lg:px-6">
        <!-- Mobile menu button -->
        <button
          id="mobile-menu-btn"
          class="lg:hidden p-2 rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <!-- Logo -->
        <a href="/" class="flex items-center">
          <img
            src="/assets/images/fp_logo_revised.png"
            alt="Field Promax"
            class="h-10 w-auto dark:bg-white dark:rounded dark:px-2 dark:py-1"
          />
        </a>

        <!-- Right side actions -->
        <div class="flex items-center gap-2 sm:gap-4">
          <!-- Dark mode toggle -->
          <button
            id="theme-toggle"
            class="theme-toggle"
            aria-label="Toggle dark mode"
          >
            <!-- Sun icon (shown in dark mode) -->
            <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <!-- Moon icon (shown in light mode) -->
            <svg class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
          </button>

          <a
            href="https://www.fieldpromax.com"
            target="_blank"
            rel="noopener noreferrer"
            class="hidden sm:inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors"
          >
            Go to App
          </a>
        </div>
      </div>
    </header>

    <!-- Overlay for mobile menu -->
    <div id="overlay" class="fixed inset-0 bg-black/50 z-30 lg:hidden hidden"></div>

    <!-- Sidebar -->
    <aside
      id="sidebar"
      class="fixed top-17 left-0 z-40 w-72 h-[calc(100vh-4.25rem)] bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 overflow-y-auto transform -translate-x-full lg:translate-x-0 transition-transform duration-200"
    >
      <nav class="p-4 space-y-4">
        {navigation.map((navSection) => (
          <div>
            <h3 class="sidebar-section">
              <!-- Section Icon -->
              <span class={`section-icon ${sectionColors[navSection.title] || 'text-gray-500'}`}>
                {navSection.title === "Company Setup" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                )}
                {navSection.title === "Work Orders" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                  </svg>
                )}
                {navSection.title === "Invoice & Payments" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
                {navSection.title === "Mobile App" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                )}
                {navSection.title === "Dispatch" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                )}
                {navSection.title === "Estimates" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                )}
                {navSection.title === "CRM" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                )}
                {navSection.title === "Dashboard & Reports" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                )}
                {navSection.title === "Timekeeping" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
                {navSection.title === "Notifications" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                  </svg>
                )}
                {navSection.title === "Auxiliary Modules" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                  </svg>
                )}
                {navSection.title === "Helpful Resources" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                )}
                {navSection.title === "Account Information" && (
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                )}
              </span>
              {navSection.title}
            </h3>
            <ul class="mt-1 space-y-0.5">
              {navSection.items.map((item) => (
                <li>
                  <a
                    href={item.href}
                    class:list={[
                      "sidebar-link",
                      { active: currentPath === item.href || currentPath === item.href + "/" }
                    ]}
                  >
                    {item.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </nav>
    </aside>

    <!-- Main content -->
    <main class="lg:ml-72 pt-17 min-h-screen">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Breadcrumb -->
        {section && (
          <nav class="mb-6 text-sm text-gray-500 dark:text-gray-400">
            <a href="/" class="hover:text-gray-700 dark:hover:text-gray-300">Home</a>
            <span class="mx-2">/</span>
            <span class="text-gray-900 dark:text-gray-100">{section}</span>
          </nav>
        )}

        <!-- Page title -->
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8">{title}</h1>

        <!-- Content -->
        <article class="prose prose-gray dark:prose-invert">
          <slot />
        </article>
      </div>

      <!-- Footer -->
      <footer class="bg-gray-900 text-gray-300 mt-12">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
          <div class="grid gap-8 sm:grid-cols-2">
            <!-- Contact Info -->
            <div>
              <h4 class="text-white font-semibold mb-3">Contact Us</h4>
              <p class="mb-2 text-sm">
                <span class="font-medium">E-mail:</span>
                <a href="mailto:info@fieldpromax.com" class="hover:text-orange-400 transition-colors">info@fieldpromax.com</a>
              </p>
              <p class="text-sm">
                <span class="font-medium">Phone:</span>
                <a href="tel:+18882499201" class="hover:text-orange-400 transition-colors">+1 (888) 249-9201</a>
              </p>
            </div>

            <!-- App Links -->
            <div>
              <h4 class="text-white font-semibold mb-3">Get the App</h4>
              <div class="flex gap-3">
                <a href="https://play.google.com/store/apps/details?id=com.fieldpromax.fieldpromaxplus" target="_blank" rel="noopener noreferrer">
                  <img src="/assets/images/googleplay.svg" alt="Get it on Google Play" class="h-9" />
                </a>
                <a href="https://apps.apple.com/in/app/field-promax-plus/id6446847200" target="_blank" rel="noopener noreferrer">
                  <img src="/assets/images/Appstore.svg" alt="Download on the App Store" class="h-9" />
                </a>
              </div>
            </div>
          </div>

          <!-- Bottom Bar -->
          <div class="border-t border-gray-800 mt-6 pt-6 flex flex-col sm:flex-row justify-between items-center gap-4">
            <p class="text-xs text-gray-500">
              &copy; 2023 Field Promax LLC
            </p>
            <nav class="flex flex-wrap justify-center gap-4 text-xs">
              <a href="https://www.fieldpromax.com/term-and-condition/" target="_blank" rel="noopener noreferrer" class="hover:text-orange-400 transition-colors">
                Terms and Conditions
              </a>
              <a href="https://www.fieldpromax.com/privacy-policy-2/" target="_blank" rel="noopener noreferrer" class="hover:text-orange-400 transition-colors">
                Privacy Policy
              </a>
              <a href="https://www.fieldpromax.com/disclaimer/" target="_blank" rel="noopener noreferrer" class="hover:text-orange-400 transition-colors">
                Disclaimer
              </a>
            </nav>
          </div>
        </div>
      </footer>
    </main>

    <!-- Scripts -->
    <script>
      // Mobile menu toggle
      const menuBtn = document.getElementById('mobile-menu-btn');
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('overlay');

      function toggleMenu() {
        sidebar?.classList.toggle('-translate-x-full');
        overlay?.classList.toggle('hidden');
        document.body.classList.toggle('overflow-hidden');
      }

      menuBtn?.addEventListener('click', toggleMenu);
      overlay?.addEventListener('click', toggleMenu);

      // Theme toggle
      const themeToggle = document.getElementById('theme-toggle');

      themeToggle?.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
    </script>
  </body>
</html>
