---

<!DOCTYPE html>
<html lang="en" class="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Field Promax Tutorials - Master your field service operations with comprehensive guides" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>Field Promax Tutorials</title>
    <script is:inline>
      const theme = localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.classList.toggle('dark', theme === 'dark');
    </script>
    <style>
      body {
        font-family: 'Plus Jakarta Sans', sans-serif;
      }
    </style>
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-end h-14 gap-4">
          <button
            id="theme-toggle"
            class="p-2 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
            aria-label="Toggle dark mode"
          >
            <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <svg class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
          </button>
          <a
            href="https://www.fieldpromax.com"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-orange-500 rounded-lg hover:bg-orange-600 transition-colors"
          >
            Go to App
          </a>
        </div>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="bg-gray-100 dark:bg-gray-800 py-12 md:py-16 border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <img
          src="/assets/images/fp_logo_revised.png"
          alt="Field Promax"
          class="h-16 md:h-20 w-auto mx-auto mb-6 dark:bg-white dark:rounded-lg dark:px-4 dark:py-2"
        />
        <h1 class="text-2xl md:text-4xl font-bold text-gray-900 dark:text-white mb-3">
          Tutorials & Guides
        </h1>
        <p class="text-base md:text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Master your field service operations with our comprehensive guides
        </p>
      </div>
    </section>

    <!-- Tutorial Blocks -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {navigation.map((section) => (
          <a
            href={section.items[0]?.href || '#'}
            class="group bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-gray-700 hover:shadow-lg hover:border-orange-300 dark:hover:border-orange-500 transition-all duration-300 hover:-translate-y-1"
          >
            <div class="flex items-center gap-4 mb-4">
              <span class={`w-10 h-10 flex items-center justify-center ${sectionInfo[section.title]?.color || 'text-gray-500'}`}>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={sectionInfo[section.title]?.path} />
                </svg>
              </span>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100">
                {section.title}
              </h3>
            </div>
            <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
              {sectionInfo[section.title]?.description || 'Learn more about this feature.'}
            </p>
            <span class="inline-flex items-center gap-2 text-orange-600 dark:text-orange-400 font-medium text-sm group-hover:gap-3 transition-all">
              View Details
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </a>
        ))}
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-300 mt-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          <!-- Contact Info -->
          <div>
            <h4 class="text-white font-semibold mb-4">Contact Us</h4>
            <p class="mb-2">
              <span class="font-medium">E-mail:</span>
              <a href="mailto:info@fieldpromax.com" class="hover:text-orange-400 transition-colors">info@fieldpromax.com</a>
            </p>
            <p>
              <span class="font-medium">Phone:</span>
              <a href="tel:+18882499201" class="hover:text-orange-400 transition-colors">+1 (888) 249-9201</a>
            </p>
          </div>

          <!-- App Links -->
          <div>
            <h4 class="text-white font-semibold mb-4">Get the App</h4>
            <div class="flex gap-4">
              <a href="https://play.google.com/store/apps/details?id=com.fieldpromax.fieldpromaxplus" target="_blank" rel="noopener noreferrer">
                <img src="/assets/images/googleplay.svg" alt="Get it on Google Play" class="h-10" />
              </a>
              <a href="https://apps.apple.com/in/app/field-promax-plus/id6446847200" target="_blank" rel="noopener noreferrer">
                <img src="/assets/images/Appstore.svg" alt="Download on the App Store" class="h-10" />
              </a>
            </div>
          </div>

          <!-- Logo -->
          <div class="lg:text-right">
            <img
              src="/assets/images/fp_logo_revised.png"
              alt="Field Promax"
              class="h-10 w-auto bg-white rounded px-2 py-1 inline-block"
            />
          </div>
        </div>

        <!-- Bottom Bar -->
        <div class="border-t border-gray-800 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-sm text-gray-500">
            &copy; 2023 Field Promax LLC
          </p>
          <nav class="flex flex-wrap justify-center gap-6 text-sm">
            <a href="https://www.fieldpromax.com/term-and-condition/" target="_blank" rel="noopener noreferrer" class="hover:text-orange-400 transition-colors">
              Terms and Conditions
            </a>
            <a href="https://www.fieldpromax.com/privacy-policy-2/" target="_blank" rel="noopener noreferrer" class="hover:text-orange-400 transition-colors">
              Privacy Policy
            </a>
            <a href="https://www.fieldpromax.com/disclaimer/" target="_blank" rel="noopener noreferrer" class="hover:text-orange-400 transition-colors">
              Disclaimer
            </a>
          </nav>
        </div>
      </div>
    </footer>

    <script>
      const themeToggle = document.getElementById('theme-toggle');
      themeToggle?.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
    </script>
  </body>
</html>
